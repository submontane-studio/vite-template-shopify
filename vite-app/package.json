{
  "name": "vite-shopify-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:vite": "vite build --watch",
    "dev:shopify": "shopify theme dev --path ../shopify-theme",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:shopify\"",
    "build": "bun run lint && vite build && shopify theme push --path ../shopify-theme --force",
    "preview": "vite preview",
    "lint": "biome check .",
    "fix": "biome check . --apply"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "@vituum/vite-plugin-liquid": "^1.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "sass": "^1.93.3",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-checker": "^0.11.0",
    "vite-plugin-image-optimizer": "^2.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "dependencies": {
    "vite-plugin-shopify": "^4.0.2"
  }
}