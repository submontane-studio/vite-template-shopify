{
  "name": "vite-shopify-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:vite": "vite build --watch",
    "dev:shopify": "shopify theme dev --path ../shopify-theme",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:shopify\"",
    "build": "bun run lint && vite build",
    "preview": "vite preview",
    "lint": "biome check src vite.config.ts biome.json package.json tsconfig.json",
    "fix": "biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "sass": "^1.93.3",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-checker": "^0.11.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "vite-plugin-shopify": "^4.0.2"
  }
}